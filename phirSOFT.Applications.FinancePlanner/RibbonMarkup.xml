  <Application.Views>

    <Ribbon>
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="QuickAccessToolbar">

        </QuickAccessToolbar>
      </Ribbon.QuickAccessToolbar>



      <Ribbon.HelpButton>
        <HelpButton CommandName ="Help"/>
      </Ribbon.HelpButton>

      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="ApplicationMenu">
          <MenuGroup>
            <Button CommandName="Connect"/>
            <DropDownButton CommandName="ConnectTo"/>
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>


      <Ribbon.Tabs>

        <Tab CommandName="Main">
          <Group CommandName ="Connection" SizeDefinition="FourButtons">
            <Button CommandName="Connect"/>
            <Button CommandName="Disconnect"/>
            <DropDownButton CommandName="ConnectTo"/>
            <Button CommandName="Reconnect"/>
          </Group>
        </Tab>

        <Tab CommandName ="Windows">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group ="WindowsGroup" Size ="Large"/>
              </ScalingPolicy.IdealSizes>
              <Scale Group ="WindowsGroup" Size ="Medium"/>
              <Scale Group ="WindowsGroup" Size ="Small"/>
              <Scale Group ="WindowsGroup" Size ="Popup"/>
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group SizeDefinition="SevenButtons" CommandName ="WindowsGroup">
            <Button CommandName ="CategoryEditor"/>
            <Button CommandName="Log"/>
            <Button CommandName="TransactionOverview"/>
            <Button CommandName="Reminder"/>
            <Button CommandName="Search"/>
            <Button CommandName="TransactionEditor"/>
            <Button CommandName="AnnualReport"/>
          </Group>
        </Tab>


      </Ribbon.Tabs>
      <Ribbon.ContextualTabs>
        <TabGroup CommandName ="CategoriesTools">
          <Tab CommandName ="Categories">
            <Tab.ScalingPolicy>
              <ScalingPolicy>
                <ScalingPolicy.IdealSizes>
                  <Scale Group ="EditCategory" Size ="Large"/>
                  <Scale Group="ChangeCategory" Size="Large"/>
                </ScalingPolicy.IdealSizes>
                <Scale Group ="EditCategory" Size ="Medium"/>
                <Scale Group ="EditCategory" Size ="Small"/>
                <Scale Group="ChangeCategory" Size="Medium"/>

              </ScalingPolicy>
            </Tab.ScalingPolicy>
            <Group CommandName ="EditCategory" SizeDefinition="FiveButtons">
              <Button CommandName="Add"/>
              <Button CommandName="Delete"/>
              <Button CommandName="Edit"/>
              <Button CommandName="Move"/>
              <Button CommandName="Join" />

            </Group>
            <Group SizeDefinition ="TwoButtons" CommandName="ChangeCategory">
              <Button CommandName ="Accept"/>
              <Button CommandName="Discard"/>
            </Group>
          </Tab>
        </TabGroup>
      </Ribbon.ContextualTabs>

    </Ribbon>
    <ContextPopup>
      <ContextPopup.MiniToolbars>
        <MiniToolbar Name ="ChangesMiniToolbar">
          <MenuGroup>
            <Button CommandName ="Accept"/>
            <Button CommandName="Discard"/>
          </MenuGroup>
        </MiniToolbar>
      </ContextPopup.MiniToolbars>
      <ContextPopup.ContextMenus>
        <ContextMenu  Name="EditCategoriesContextMenu">
          <MenuGroup>
            <Button CommandName ="Delete"/>
            <Button CommandName ="Edit"/>
            <Button CommandName="Move"/>
            <Button CommandName="Join"/>
          </MenuGroup>
        </ContextMenu>
      </ContextPopup.ContextMenus>

      <ContextPopup.ContextMaps>
        <ContextMap CommandName="ChangesToolbar" MiniToolbar ="ChangesMiniToolbar"/>
        <ContextMap CommandName="EditCategoriesContext" ContextMenu ="EditCategoriesContextMenu"/>
      </ContextPopup.ContextMaps>
    </ContextPopup>
  </Application.Views>
</Application>