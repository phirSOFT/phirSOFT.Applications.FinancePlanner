<fluent:StatusBarItem x:Class="ProgressModule.Views.ProgressViewer"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:local="clr-namespace:ProgressModule.Views"
                      xmlns:fluent="urn:fluent-ribbon"
                      xmlns:prism="http://prismlibrary.com/"
                      mc:Ignorable="d"
                      HorizontalAlignment="Right"
                      VerticalContentAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      prism:ViewModelLocator.AutoWireViewModel="True"
                      xmlns:shared="clr-namespace:Shared;assembly=Shared"
                      Visibility="{Binding Visible}"
                               
                      d:DesignHeight="24" d:DesignWidth="300">

    <ProgressBar Width="100" Value="{Binding Progress}" Margin="5"/>
</fluent:StatusBarItem>
